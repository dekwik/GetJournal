<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bekron"
    android:id="@+id/consrwtrgs"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/book"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:id="@+id/bukgedebuk"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/JudulJurnal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="Judul Jurnal"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="5pt"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toEndOf="@+id/bukgedebuk"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="14 November"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/bukgedebuk"
        app:layout_constraintTop_toBottomOf="@+id/JudulJurnal" />

    <TextView
        android:id="@+id/DoiJurnal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:textSize="12sp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="@+id/txtPostDate"
        app:layout_constraintTop_toBottomOf="@+id/txtPostDate"
        android:text="DOI : 123456" />

    <TextView
        android:id="@+id/postby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="post by : dekwik"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/DoiJurnal"
        app:layout_constraintTop_toBottomOf="@+id/DoiJurnal" />

